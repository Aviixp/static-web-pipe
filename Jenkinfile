pipeline {
    agent any

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Aviixp/static-web-pipe.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t static-web-pipe:latest .'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh '''
                docker stop static-web || true
                docker rm static-web || true
                docker run -d \
                  --name static-web \
                  -p 8080:80 \
                  static-web-pipe:latest
                '''
            }
        }
    }
}

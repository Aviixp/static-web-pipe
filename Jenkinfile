pipeline {
    agent any

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Aviixp/static-web-pipe.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t static-web-pipe:latest .'
            }
        }

        stage('Run Docker Container') {
            steps {
                bat '''
                docker stop static-web 2>nul
                docker rm static-web 2>nul
                docker run -d --name static-web -p 8090:80 static-web-pipe:latest
                '''
            }
        }

        stage('Show Website URL') {
            steps {
                echo "âœ… Static Website is LIVE"
                echo "ğŸ‘‰ Open in browser: http://localhost:8090"
            }
        }
    }

    post {
        success {
            script {
                currentBuild.description =
                    "ğŸŒ <a href='http://localhost:8090' target='_blank'>Open Static Website</a>"
            }
        }
    }
}
